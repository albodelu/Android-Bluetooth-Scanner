<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/device_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="BLeDevice 1"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/device_rssi_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/device_name_textview"
            android:layout_below="@id/device_name_textview"
            android:layout_marginBottom="10dp"
            android:text="RSSI: -42"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22dp"
            android:text="CONNECT"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>